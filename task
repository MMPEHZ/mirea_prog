using HorizonSideRobots
import HorizonSideRobots.move!

r=Robot(animate=true)

function move_until_border!(r,side)
    n_steps = 0
    while !isborder(r, side)
        n_steps += 1
        move!(r, side)
    end
    return n_steps
end

function get_left_down_angle!(r)
    steps_to_left_border = move_until_border!(r, West)
    steps_to_down_border = move_until_border!(r, Sud)
    return (steps_to_down_border, steps_to_left_border)
end

function mark_fild!(r)
    steps_to_origin = get_left_down_angle!(r)
    putmarker!(r)
    while !isborder(r, Ost)
        putmarkers_until_border!(r,Nord)
        move!(r, Ost)
        putmarker!(r)
        putmarkers_until_border!(r, Sud)
    end
    get_left_down_angle!(r)
    get_to_origin!(r, steps_to_origin)
end


function putmarkers_until_border!(r, side)
    n_steps = 0
    while !isborder(r, side)
        n_steps += 1
        move!(r, sides)
        putmarker!(r)
    end
    return n_steps
end

function moves!(r, side, n_steps)
    for _ in 1:n_steps
        move!(r, sides)
    end
end

function move!(r, side)
    for side in sides
        move!(r, side)
    end
end

function inverse_side(side)
    new_sides = (inverse_side(sides[1]), inverse_side(sides[2]))
    return new_sides
end
